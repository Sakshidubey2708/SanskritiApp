<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
   >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="1dp"
        android:background="@drawable/shape_of_underback">

        <TextView
            android:id="@+id/SubMaterialTypeName"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:fontFamily="serif"
            android:hint="Material Name"
            android:layout_gravity="left"
            android:gravity="left|center|center_horizontal"
            android:paddingLeft="10dp"
            android:textColor="@color/colort"
            android:textSize="19sp"
            android:layout_marginTop="10dp"/>
        <View
            android:id="@+id/views"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/dark_gray"
            android:layout_below="@+id/text"
            android:layout_centerHorizontal="true"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/mesurmentType"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:inputType="text"
                android:textColor="@color/black"
                android:gravity="left|center"
                android:layout_gravity="center_horizontal|center"
                android:textSize="10sp"
                android:background="@drawable/order_edittext_shape"
                android:hint="Roll"
                android:paddingLeft="15dp" />

            <TextView
                android:layout_width="2dp"
                android:layout_height="40dp"
                android:text="hgdghjddg"
                android:visibility="invisible" />
            <TextView
                android:id="@+id/matrilId"
                android:layout_width="2dp"
                android:layout_height="40dp"
                android:text="hgdghjddg"
                android:visibility="gone" />
            <EditText
                android:id="@+id/catalogDesignName"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/order_edittext_shape"
                android:hint="Design Name"
                android:textColor="@color/black"
                android:textSize="10sp"
                android:inputType="text"
                android:paddingLeft="15dp" />

            <TextView
                android:layout_width="2dp"
                android:layout_height="40dp"
                android:text="hgdghjddg"
                android:visibility="invisible" />

            <EditText
                android:id="@+id/catalogQuality"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/order_edittext_shape"
                android:hint="Quality"
                android:textColor="@color/black"
                android:textSize="10sp"
                android:inputType="text"
                android:paddingLeft="15dp" />
            <TextView
                android:layout_width="2dp"
                android:layout_height="40dp"
                android:text="hgdghjddg"
                android:visibility="invisible" />
            <EditText
                android:id="@+id/pageNo"
                android:layout_width="230dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:hint="Page"
                android:textColor="@color/black"
                android:background="@drawable/order_edittext_shape"
                android:textSize="10sp"
                android:inputType="number"
                android:paddingLeft="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">




            <TextView
                android:layout_width="3dp"
                android:layout_height="40dp"
                android:text="hgdghjddg"
                android:visibility="invisible" />


            <EditText
                android:id="@+id/CatalogMrp"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:inputType="numberDecimal"
                android:textSize="10sp"
                android:textColor="@color/black"
                android:hint="MRP"
                android:background="@drawable/order_edittext_shape"
                android:paddingLeft="10dp" />
            <TextView
                android:layout_width="3dp"
                android:layout_height="40dp"
                android:text="hgdghjddg"
                android:visibility="invisible" />
            <TextView
                android:id="@+id/catalog_item_idssss"
                android:layout_width="3dp"
                android:layout_height="40dp"
                android:text="hgdghjddg"
                android:visibility="gone" />
            <AutoCompleteTextView
                android:id="@+id/catalogQuantity"
                android:layout_width="230dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:hint="Quantity"
                android:textColor="@color/black"
                android:background="@drawable/order_edittext_shape"
                android:textSize="10sp"
                android:inputType="numberDecimal"
                android:paddingLeft="10dp" />
            <TextView
                android:layout_width="3dp"
                android:layout_height="40dp"
                android:text="hgdghjddg"
                android:visibility="invisible" />
            <AutoCompleteTextView
                android:id="@+id/catalog_dicount"
                android:textSize="10sp"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/order_edittext_shape"
                android:hint="Dis."
                android:inputType="numberDecimal"
                android:paddingLeft="10dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:background="@drawable/order_edittext_shape">



            <TextView
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:text="Total Amount"
                android:gravity="center|left"
                android:paddingLeft="15dp"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:fontFamily="serif"/>
            <TextView
                android:id="@+id/AfetrDiscountAmount"
                android:layout_width="match_parent"
                android:gravity="center|left"
                android:layout_height="40dp"
                android:textSize="11sp"
                android:paddingLeft="15dp"
                android:textColor="@color/black" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/tailorAmountLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:background="@drawable/order_edittext_shape"
            android:visibility="gone">



            <TextView
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:text="Tailor Amount"
                android:gravity="center|left"
                android:paddingLeft="15dp"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:fontFamily="serif"/>
            <TextView
                android:id="@+id/TailorAmount"
                android:layout_width="match_parent"
                android:gravity="center|left"
                android:layout_height="40dp"
                android:textSize="11sp"
                android:paddingLeft="15dp"
                android:textColor="@color/black" />

        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/l"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/catalogID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/roomId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"/>
            <Button
                android:id="@+id/submitButton"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/button_shape"
                android:layout_centerHorizontal="true"
                android:fontFamily="serif"
                android:text="Ok"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="15sp" />
            <CheckBox
                android:id="@+id/tailorAddCheckbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Tailor"
                android:paddingLeft="15dp"
                android:visibility="gone"
                android:textSize="10sp"
                android:textColor="@color/black"
                android:fontFamily="@font/fonts"/>
            <CheckBox
                android:id="@+id/karigarAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Karigar"
                android:textSize="10sp"
                android:visibility="gone"
                android:paddingRight="15dp"
                android:layout_alignParentRight="true"
                android:textColor="@color/black"
                android:fontFamily="@font/fonts"/>

        </RelativeLayout>

    </LinearLayout>
    <ImageButton
        android:id="@+id/closeButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:visibility="visible"
        android:layout_marginBottom="50dp"
        android:background="@drawable/circle_shape"
        android:src="@drawable/ic_add_black_24dp"
        android:layout_alignParentRight="true"
        android:tint="@color/white"
        android:layout_margin="5dp" />
</RelativeLayout>
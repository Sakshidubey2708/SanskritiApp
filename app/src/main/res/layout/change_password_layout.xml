<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/backdrop"
    tools:context=".activity.AddCustomerActivity"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay">

    </android.support.v7.widget.Toolbar>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="30dp">

        <EditText
            android:id="@+id/oldPass"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_above="@+id/newPass"
            android:layout_alignParentStart="true"
            android:background="@drawable/edittext_shape"
            android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
            android:drawablePadding="15dp"
            android:drawableTint="@color/colortt"
            android:fontFamily="@font/fonts"
            android:hint="Old password"
            android:padding="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="15sp"
            android:inputType="textPassword"
            android:paddingLeft="15dp"
            android:textColor="@color/black"
            />

        <EditText
            android:id="@+id/newPass"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_above="@+id/cnfrm_password"
            android:background="@drawable/edittext_shape"
            android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
            android:drawablePadding="15dp"
            android:drawableTint="@color/colortt"
            android:hint="New Password"
            android:paddingLeft="15dp"
            android:padding="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:fontFamily="@font/fonts"
            android:inputType="textPassword"/>

        <EditText
            android:id="@+id/cnfrm_password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/edittext_shape"
            android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
            android:drawablePadding="15dp"
            android:drawableTint="@color/colortt"
            android:fontFamily="@font/fonts"
            android:hint="Confirm Password"
            android:paddingLeft="15dp"
            android:padding="10dp"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:inputType="textPassword"/>



        <Button
            android:id="@+id/changePassBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/cnfrm_password"
            android:background="@drawable/button_shape"
            android:fontFamily="@font/fonts"
            android:text="Change Password"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="19sp"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:textStyle="bold" />
    </RelativeLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/backdrop"
    tools:context=".activity.AddCustomerActivity"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/color"
        app:popupTheme="@style/AppTheme.PopupOverlay"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="30dp">

        <EditText
            android:id="@+id/custNames"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_above="@+id/customercontact"
            android:layout_alignParentStart="true"
            android:background="@drawable/edittext_shape"
            android:drawableLeft="@drawable/ic_person_outline_black_24dp"
            android:drawablePadding="15dp"
            android:drawableTint="@color/colorAccent"
            android:fontFamily="@font/fonts"
            android:hint="Customer Name"
            android:inputType="text"
            android:padding="10dp"
            android:paddingLeft="15dp"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:maxLength="35"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/customercontact"
            android:layout_width="match_parent"
            android:layout_height="50dp"
           android:layout_above="@+id/customerAddress"
            android:background="@drawable/edittext_shape"
            android:drawableLeft="@drawable/ic_phone_android_black_24dp"
            android:drawablePadding="15dp"
            android:drawableTint="@color/colorAccent"
            android:fontFamily="@font/fonts"
            android:hint="Contact Number"
            android:inputType="number"
            android:paddingLeft="15dp"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:maxLength="10"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/customerAddress"
            android:layout_width="match_parent"
            android:layout_height="50dp"
           android:layout_centerHorizontal="true"
            android:background="@drawable/edittext_shape"
            android:drawableLeft="@drawable/ic_home_black_24dp"
            android:drawablePadding="15dp"
            android:drawableTint="@color/colorAccent"
            android:fontFamily="@font/fonts"
            android:hint="Address"
            android:inputType="text"
            android:paddingLeft="15dp"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_above="@+id/custInteriarName"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/custInteriarName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/edittext_shape"
            android:drawableLeft="@drawable/ic_edit_black_24dp"
            android:drawablePadding="15dp"
            android:drawableTint="@color/colorAccent"
            android:fontFamily="@font/fonts"
            android:hint="@string/InteriorName"
            android:inputType="text"
            android:paddingLeft="15dp"
            android:textColor="@color/black"
            android:maxLength="35"
            android:textSize="15sp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>

        <EditText
            android:id="@+id/custInteriorMobile"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/custInteriarName"
            android:background="@drawable/edittext_shape"
            android:drawableLeft="@drawable/ic_phone_android_black_24dp"
            android:drawablePadding="15dp"
            android:drawableTint="@color/colorAccent"
            android:fontFamily="@font/fonts"
            android:hint="@string/InteriorNo"
            android:inputType="number"
            android:paddingLeft="15dp"
            android:padding="10dp"
            android:maxLength="10"
            android:ems="10"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/addCustButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/custInteriorMobile"
            android:background="@drawable/button_shape"
            android:fontFamily="@font/fonts"
            android:text="Add Customer"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="19sp"
            android:padding="10dp"
            android:textStyle="bold"
            android:layout_marginTop="20sp"/>

    </RelativeLayout>

</LinearLayout>
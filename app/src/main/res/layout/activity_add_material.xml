<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/backdrop"
    tools:context=".activity.AddMaterialActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay"/>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp">
    <EditText
        android:id="@+id/materialtype"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        android:hint="Material Type"
        android:textAlignment="center"
        android:layout_above="@+id/materialcurtain"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edittext_shape"/>
    <EditText
        android:id="@+id/materialcurtain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Material Curtain"
        android:layout_above="@+id/materialsofa"
        android:layout_marginBottom="10dp"
        android:textAlignment="center"
        android:background="@drawable/edittext_shape"/>
    <EditText
        android:id="@+id/materialsofa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Material Sofa"
        android:textAlignment="center"
        android:background="@drawable/edittext_shape"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>
    <EditText
        android:id="@+id/materialwallpaper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Material Wallpaper"
        android:layout_below="@+id/materialsofa"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:background="@drawable/edittext_shape"/>
    <EditText
        android:id="@+id/materialpadding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Material Padding"
        android:textAlignment="center"
        android:layout_below="@+id/materialwallpaper"
        android:layout_marginTop="10dp"
        android:background="@drawable/edittext_shape"/>
    <Button
        android:id="@+id/materialbnt"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        android:text="Add Material"
        android:background="@drawable/button_shape"
        android:layout_below="@+id/materialpadding"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="19sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"/>

</RelativeLayout>
</LinearLayout>
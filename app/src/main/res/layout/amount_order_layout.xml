<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AmountOrderActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="330dp"
                    android:layout_height="50dp"
                    android:padding="10dp"
                    android:text="Amount pay by customer"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:fontFamily="serif"
                    android:layout_weight="1" />

                <AutoCompleteTextView
                    android:id="@+id/advanceAmount"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:hint="Advance"
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    android:padding="10dp"
                    android:inputType="numberDecimal"
                    android:layout_weight="1.6"
                    android:background="@drawable/order_edittext_shape" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp">

                <Button
                    android:id="@+id/okBtn"
                    android:layout_width="130dp"
                    android:layout_height="35dp"
                    android:text="ok"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/button_shape" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/amountType"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:padding="10dp"
                android:textColor="@color/black"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="350dp"
                    android:layout_height="45dp"
                    android:text="Total MRP Amount"
                    android:inputType="number"
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    android:padding="10dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/totalAmount"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:hint="Total Amount"
                    android:inputType="number"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:padding="10dp"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="350dp"
                    android:layout_height="45dp"
                    android:text="Discount % "
                    android:inputType="number"
                    android:textColor="@color/black"
                    android:padding="10dp"
                    android:textSize="13sp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/discountAmount"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:hint="Discount % "
                    android:textColor="@color/black"
                    android:padding="10dp"
                    android:textSize="12sp"
                    android:inputType="number"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="350dp"
                    android:layout_height="45dp"
                    android:text="After discount"
                    android:inputType="number"
                    android:textColor="@color/black"
                    android:padding="10dp"
                    android:textSize="13sp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/grossAmount"
                    android:textSize="12sp"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:hint="After discount"
                    android:textColor="@color/black"
                    android:padding="10dp"
                    android:inputType="number" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:background="@color/dark_gray" />

            <LinearLayout
                android:id="@+id/secondBottomLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="invisible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:layout_width="350dp"
                        android:layout_height="45dp"
                        android:text="Advance Amount"
                        android:inputType="number"
                        android:textColor="@color/black"
                        android:textSize="13sp"
                        android:padding="10dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/textAdavanceAmount"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:hint="Advance Amount"
                        android:textColor="@color/black"
                        android:padding="10dp"
                        android:textSize="12sp"
                        android:inputType="number"
                        android:layout_weight="1" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="350dp"
                        android:layout_height="45dp"
                        android:text="Due Amount"
                        android:inputType="number"
                        android:textColor="@color/black"
                        android:padding="10dp"
                        android:textSize="13sp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/pendingAmount"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:hint="Due Amount"
                        android:inputType="text"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:padding="10dp"
                        android:layout_weight="1" />
                </LinearLayout>

                <Button
                    android:id="@+id/addAmount"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/button_shape"
                    android:text="Save"
                    android:textSize="19dp"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:layout_marginTop="40dp" />
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>